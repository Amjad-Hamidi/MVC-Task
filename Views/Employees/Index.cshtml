@{
    ViewData["Title"] = "Index";
}

<a href="/Employees/Create" class="btn btn-outline-success"> New </a>
<h1>All Employees</h1>
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Email</td>
            <td>Password</td>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model) @* Model : ثابتة دائما *@
        {  
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
            </tr>
            
        }
        

